{
    "name": "thepublicgood/smsportal",
    "description": "SMSPortal client for Laravel",
    "authors": [
        {
            "name": "THEPUBLICGOOD",
            "email": "makers@thepublicgood.dev"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^9.0|^10.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "pestphp/pest": "^1.21",
        "orchestra/testbench": "^v7.24|^8.4"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "TPG\\SMSPortal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TPG\\SMSPortal\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TPG\\SMSPortal\\SMSPortalServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
